<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FPT Education System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FPT Education System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-nav">
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                  <li>@Html.ActionLink("My Account", "Index", "AccountViewModels")</li>
                  <li>@Html.ActionLink("Create a New Account", "Register", "Account")</li>                 
                }
                @if (Request.IsAuthenticated && User.IsInRole("Staff"))
                {
                  <li>@Html.ActionLink("My Account", "Index", "AccountViewModels")</li>
                  <li>@Html.ActionLink("Manage Category", "Index", "Categories")</li>
                  <li>@Html.ActionLink("Manage Topic", "Index", "Topics")</li>
                  <li>@Html.ActionLink("Manage Course", "Index", "Courses")</li>
                  <li>@Html.ActionLink("Trainee", "Index", "TraineeCourses")</li>
                  <li>@Html.ActionLink("Trainer", "Index", "TrainerTopics")</li>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Trainee"))
                {
                  <li>@Html.ActionLink("My Account", "Index", "AccountViewModels")</li>
                  <li>@Html.ActionLink("Courses", "Index", "TraineeCourses")</li>
                }
                @if (Request.IsAuthenticated && User.IsInRole("Trainer"))
                {
                  <li>@Html.ActionLink("My Account", "Index", "AccountViewModels")</li>
                  <li>@Html.ActionLink("Topics", "Index", "TrainerTopics")</li>
                }
              </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
          <p>&copy; @DateTime.Now.Year - FPT Education System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
