@model _0702.ViewModels.CourseViewModel

@{
  ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Edit", "Courses", FormMethod.Post))
{
  @Html.HiddenFor(c => c.Course.Id)
  <div class="form-group">
    @Html.LabelFor(c => c.Course.Name)
    @Html.EditorFor(p => p.Course.Name, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Course.Name, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Course.Description)
    @Html.EditorFor(c => c.Course.Description, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(c => c.Course.Description, "", new { @class = "text-danger" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Course.Category.Name)
    @Html.DropDownListFor(c => c.Course.CategoryId,
     new SelectList(Model.Categories, "Id", "Name"),
     "Select Category Name",
     new { @class = "form-control" })
  </div>
  <div class="form-group">
    @Html.LabelFor(c => c.Course.Topic.Name)
    @Html.DropDownListFor(c => c.Course.TopicId,
     new SelectList(Model.Topics, "Id", "Name"),
     "Select Topic Name",
     new { @class = "form-control" })
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Create" class="btn btn-default" />
    </div>
  </div>
}

<div>
  @Html.ActionLink("Back to List", "Index")
</div>